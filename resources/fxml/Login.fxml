<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controllers.LoginController" 
            fitToWidth="true" styleClass="scroll-pane-login" 
            vbarPolicy="AS_NEEDED" hbarPolicy="NEVER">
    
    <VBox alignment="CENTER" spacing="18" styleClass="login-container">
        
        <padding>
            <Insets top="25" right="15" bottom="40" left="15"/>
        </padding>
        
        <!-- Logo Section -->
        <VBox alignment="CENTER" spacing="8" maxWidth="500">
            <Label text="ðŸ“š Smart Shelf" styleClass="title">
                <font>
                    <Font name="System Bold" size="34"/>
                </font>
            </Label>
            <Label text="Modern Library Management System" styleClass="subtitle">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
        </VBox>
        
        <!-- Login Form -->
        <VBox fx:id="loginBox" spacing="14" styleClass="form-container" maxWidth="460" minWidth="320">
            <padding>
                <Insets top="28" right="28" bottom="28" left="28"/>
            </padding>
            
            <Label text="Welcome Back!" styleClass="form-title">
                <font>
                    <Font name="System Bold" size="20"/>
                </font>
            </Label>
            
            <VBox spacing="6">
                <Label text="User ID" styleClass="form-label"/>
                <TextField fx:id="txtUserId" promptText="Enter your user ID" styleClass="form-control"/>
            </VBox>
            
            <VBox spacing="6">
                <Label text="Password" styleClass="form-label"/>
                <PasswordField fx:id="txtPassword" promptText="Enter your password" styleClass="form-control"/>
            </VBox>
            
            <Label fx:id="lblStatus" textFill="red" styleClass="status-label" wrapText="true" minHeight="15"/>
            
            <Button text="Login" onAction="#handleLogin" styleClass="btn-primary" maxWidth="Infinity" minHeight="45">
                <font>
                    <Font size="15" name="System Bold"/>
                </font>
            </Button>
            
            <Separator/>
            
            <Button text="Create New Account" onAction="#showSignup" styleClass="btn-secondary" maxWidth="Infinity" minHeight="42">
                <font>
                    <Font size="14"/>
                </font>
            </Button>
        </VBox>
        
        <!-- Sign Up Form -->
        <VBox fx:id="signupBox" spacing="12" styleClass="form-container" maxWidth="460" minWidth="320">
            <padding>
                <Insets top="25" right="28" bottom="25" left="28"/>
            </padding>
            
            <Label text="Create Account" styleClass="form-title">
                <font>
                    <Font name="System Bold" size="20"/>
                </font>
            </Label>
            
            <VBox spacing="6">
                <Label text="User ID" styleClass="form-label"/>
                <TextField fx:id="txtSignupUserId" promptText="Choose a unique user ID" styleClass="form-control-compact"/>
            </VBox>
            
            <VBox spacing="6">
                <Label text="Full Name" styleClass="form-label"/>
                <TextField fx:id="txtSignupName" promptText="Enter your full name" styleClass="form-control-compact"/>
            </VBox>
            
            <VBox spacing="6">
                <Label text="Email Address" styleClass="form-label"/>
                <TextField fx:id="txtSignupEmail" promptText="your.email@example.com" styleClass="form-control-compact"/>
            </VBox>
            
            <VBox spacing="6">
                <Label text="Phone Number" styleClass="form-label"/>
                <TextField fx:id="txtSignupPhone" promptText="Enter your phone number" styleClass="form-control-compact"/>
            </VBox>
            
            <VBox spacing="6">
                <Label text="Password" styleClass="form-label"/>
                <PasswordField fx:id="txtSignupPassword" promptText="Minimum 6 characters" styleClass="form-control-compact"/>
            </VBox>
            
            <VBox spacing="6">
                <Label text="Confirm Password" styleClass="form-label"/>
                <PasswordField fx:id="txtSignupConfirmPassword" promptText="Re-enter your password" styleClass="form-control-compact"/>
            </VBox>
            
            <Label fx:id="lblSignupStatus" textFill="red" styleClass="status-label" wrapText="true" minHeight="15"/>
            
            <Button text="Sign Up" onAction="#handleSignUp" styleClass="btn-primary" maxWidth="Infinity" minHeight="45">
                <font>
                    <Font size="15" name="System Bold"/>
                </font>
            </Button>
            
            <Button text="â† Back to Login" onAction="#showLogin" styleClass="btn-secondary" maxWidth="Infinity" minHeight="42">
                <font>
                    <Font size="14"/>
                </font>
            </Button>
        </VBox>
        
        <!-- Footer -->
        <VBox alignment="CENTER" spacing="6">
            <Label text="Secure â€¢ Fast â€¢ Reliable" styleClass="footer-text">
                <font>
                    <Font size="11"/>
                </font>
            </Label>
            <Label text="Â© 2025 Smart Shelf System" styleClass="footer-text">
                <font>
                    <Font size="10"/>
                </font>
            </Label>
        </VBox>
        
    </VBox>
    
</ScrollPane>
